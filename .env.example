# 多模态DR智能诊断系统环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# === 基础配置 ===
DR_SYSTEM_APP_NAME=多模态DR智能诊断系统
DR_SYSTEM_VERSION=3.0.0
DR_SYSTEM_DEBUG=false
DR_SYSTEM_LOG_LEVEL=INFO

# === 服务器配置 ===
DR_SYSTEM_HOST=0.0.0.0
DR_SYSTEM_PORT=8000
DR_SYSTEM_MAX_CONCURRENT_REQUESTS=10
DR_SYSTEM_REQUEST_TIMEOUT=300

# === 模型路径配置 ===
# 注意：请根据实际模型文件位置修改路径
DR_SYSTEM_RESNET_MODEL_PATH=./models/best_model_resnet152_simple_finetune.pth
DR_SYSTEM_QWEN_VL_MODEL_PATH=./models/Qwen-VL
DR_SYSTEM_R1_7B_MODEL_PATH=./models/R1-7B-finetuned

# === RAG配置 ===
DR_SYSTEM_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DR_SYSTEM_VECTOR_DB_PATH=./data/vector_db
DR_SYSTEM_KNOWLEDGE_BASE_PATH=./data/knowledge_base
DR_SYSTEM_CHUNK_SIZE=500
DR_SYSTEM_CHUNK_OVERLAP=50
DR_SYSTEM_TOP_K=3

# === API模型配置 ===
# 是否使用API模式（默认为True，推荐硬件资源有限的用户使用）
DR_SYSTEM_USE_API_MODELS=True

# DashScope API Key（用于Qwen-VL），从 https://dashscope.aliyun.com/ 获取
DR_SYSTEM_DASHSCOPE_API_KEY=your_dashscope_api_key_here

# DeepSeek API Key（用于推理LLM），从 https://platform.deepseek.com/ 获取
DR_SYSTEM_DEEPSEEK_API_KEY=your_deepseek_api_key_here

# API模型名称（通常无需修改）
DR_SYSTEM_QWEN_VL_MODEL_NAME=qwen-vl-max
DR_SYSTEM_DEEPSEEK_MODEL_NAME=deepseek-chat

# === 模型参数配置 ===
DR_SYSTEM_DR_MODEL_BATCH_SIZE=1
DR_SYSTEM_DR_MODEL_INPUT_SIZE=224
DR_SYSTEM_QWEN_MAX_NEW_TOKENS=256
DR_SYSTEM_QWEN_TEMPERATURE=0.7
DR_SYSTEM_QWEN_TOP_P=0.9
DR_SYSTEM_LLM_MAX_TOKENS=1024
DR_SYSTEM_LLM_TEMPERATURE=0.3
DR_SYSTEM_LLM_TOP_P=0.8

# === 缓存配置 ===
DR_SYSTEM_ENABLE_CACHE=true
DR_SYSTEM_CACHE_TTL=3600
DR_SYSTEM_MAX_CACHE_SIZE=1000

# === 安全配置 ===
DR_SYSTEM_MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
DR_SYSTEM_MIN_IMAGE_SIZE=224
DR_SYSTEM_MAX_IMAGE_SIZE=4096

# === 监控配置 ===
DR_SYSTEM_ENABLE_METRICS=true
DR_SYSTEM_METRICS_PORT=9090
DR_SYSTEM_HEALTH_CHECK_INTERVAL=30